generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id      Int     @id @default(autoincrement())
  name    String
  nit     String
  address String?
  phone   String?
  type    String
}

model Voucher {
  id          Int      @id @default(autoincrement())
  type        String
  date        DateTime
  contactId   Int?
  amount      Decimal
  description String?
  status      String?
}

model VoucherItem {
  id        Int     @id @default(autoincrement())
  voucherId Int
  pucId     Int
  total     Decimal
  discount  Decimal @default(0)
  quantity  Decimal
  unitPrice Decimal
}

model Puc {
  id          Int    @id @default(autoincrement())
  parentId    Int?
  code        String
  description String
}

model Tax {
  id         Int     @id @default(autoincrement())
  name       String
  percentage Decimal
}

model VoucherItemTax {
  id            Int     @id @default(autoincrement())
  voucherItemId Int
  taxId         Int
  value         Decimal
}
